<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imageViewR"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textviewR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageViewR"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/textviewR2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewR"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageViewR"
            android:text="Line 2"
            android:textSize="9sp" />

        <TextView
            android:id="@id/textviewR3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewR"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/textviewR2"
            android:text="Line 3"
            android:textSize="9sp" />


        <TextView
            android:id="@id/textviewR4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewR2"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageViewR"
            android:text="Line 4"
            android:textSize="9sp" />

        <TextView
            android:id="@id/textviewR5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewR2"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/textviewR4"
            android:text="Line 5"
            android:textSize="9sp" />

        <CheckBox
            android:id="@+id/like_button_cb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/textviewR4"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/imageViewR"
            android:background="@drawable/ic_fav_checkbox"
            android:button="@null"
            android:visibility="visible" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>